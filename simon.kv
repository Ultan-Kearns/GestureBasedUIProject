<MainMenu>:
    name:"mainmenu"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'LOGO'
        Button:
            text: "voice input"
            on_release: sr.voice_input()
        Button:
            text: 'Start'
            on_release: root.manager.current = "game"
        Button:
            text: 'Level'
            on_release: root.manager.current = "level"
        Button:
            text: 'Difficulty'
            on_release: root.manager.current = "difficulty"
        Button:
            text: 'Credits'
            on_release: root.manager.current = "credits"
<LevelMenu>:
    name: "level"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Levels'
        Button:
            text: '1'
        Button:
            text: '2'
        Button:
            text: '3'
        Button:
            text: 'Back to Main Menu'
            on_press: root.manager.current ="mainmenu"
<DifficultyMenu>:
    name: "difficulty"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Levels'
        Button:
            text: 'Easy'
        Button:
            text: 'Medium'
        Button:
            text: 'Hard'
        Button:
            text: 'Back to Main Menu'
            on_press: root.manager.current ="mainmenu"
<CreditsMenu>:
    name: "credits"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Developed by "The Lads": Ultan Kearns & Paul Kenny'
        Button:
            text: 'Back to Main Menu'
            on_press: root.manager.current ="mainmenu"
<GameMenu>
    name: "game"
    GridLayout:
        cols: 2
        rows: 2
        Button:
            background_color: (255,0,0,1)
        Button:
            background_color: (0,255,0,1)
            row:2
        Button:
            background_color: (0,0,255,1)
        Button:
            background_color: (255,255,0,1)
