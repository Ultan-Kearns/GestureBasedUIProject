# we left in the on_release method as it extends functionality to those who don't want to talk
<MainMenu>:
    name:"mainmenu"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'You said: '
        Button:
            text: 'Start'
            on_release: root.manager.current = "game"
        Button:
            text: 'Difficulty'
            on_release: root.manager.current = "difficulty"
        Button:
            text: 'Credits'
            on_release: root.manager.current = "credits"
<DifficultyMenu>:
    name: "difficulty"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Levels'
        Button:
            text: 'Easy'
        Button:
            text: 'Medium'
        Button:
            text: 'Hard'
        Button:
            text: 'Back to Main Menu'
            on_press: root.manager.current ="mainmenu"
<CreditsMenu>:
    name: "credits"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Developed by "The Lads": Ultan Kearns & Paul Kenny'
        Button:
            text: 'Back to Main Menu'
            on_press: root.manager.current ="mainmenu"
<GameMenu>
    name: "game"
    GridLayout:
        cols: 2
        rows: 2
        Button:
            background_color: (255,0,0,1)
        Button:
            background_color: (0,255,0,1)
        Button:
            background_color: (0,0,255,1)
        Button:
            background_color: (255,255,0,1)
